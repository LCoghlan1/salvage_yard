<div class="container mt-4">

    <div class="row justify-content-center">
      
        <div class="col-10">
            
            <!--create obj to send to errors partial - allows partial to be used with multiple instances-->
            <%= render 'shared/errors', obj: @category %>
            
            <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-light rounded", local: true) do |f| %>
            

                <div class="col-0">
                    <%= f.label :title, class: "col-2 col-form-label font-weight-bold" %>
                </div>
                <div class="form-group row">
                    <div class="col-12">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title" %>
                    </div>
                </div>
                    
                <div class="col-0">
                    <%= f.label :description, class: "col-2 col-form-label font-weight-bold" %>
                </div>
                <div class="form-group row">
                    <div class="col-12">
                        <%= f.text_area :description, rows: 5, class: "form-control shadow rounded", placeholder: "Enter text here" %>
                    </div>
                </div>
                
                
                <div class="col-0">
                    <%= f.label :image, class: "col-2 col-form-label font-weight-bold" %>
                </div>
                <div class="form-group row">
                    <div class="col-12">
                        <%= f.text_field :image, class: "form-control shadow rounded", placeholder: "Enter image URL here" %>
                    </div>
                </div>
                
                <div class="form-group row justify-content-center">
                    <%= f.submit class: "btn btn-outline-primary btn-lg" %>
                </div>
                <div class="form-group row justify-content-center">
                    <%= link_to "Cancel", categories_path, class: "btn btn-outline-danger btn-lg" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
