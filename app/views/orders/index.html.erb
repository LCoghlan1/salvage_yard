<% provide(:title, "Orders") %>

<div class="container">
<h1>Orders</h1>

<table id="customers">
  <thead>
    <tr>
      <th>User ID</th>
      <th>Status</th>
      <th>Order ID</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user_id %></td>
        <td><%= order.status %></td>
        <td><%= order.id %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>


<h2>Order Items</h2>

 <table id="customers">
   
    <thead>
      <th>Order date</th>
      <th>Item Name</th>
      <th>Order ID</th>
    </thead>
   <% @orderitems.each do |orderitem| %>
     <tbody>
      <tr>
        <td><%= orderitem.created_at %></td>
        
        <td><%= orderitem.title %></td>
       <td><%= orderitem.order_id %></td>
       
      </tr>
    <% end %>
      </tbody>
 
   <tr></tr>
   </table>
      
   </div>


  <div class="form-group row justify-content-center mt-4 mb-4">
    <%= link_to 'New Order', new_order_path, class: "btn btn-outline-primary btn-lg" %>
  </div>

</div>