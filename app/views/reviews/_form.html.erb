
<div class="container">

    <div class="row justify-content-center">
      
        <div class="col-10">
            
            <!--create obj to send to errors partial - allows partial to be used with multiple instances-->

            
            <%= form_with(model: @review, class: "shadow p-3 mb-3 bg-light rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :title, class: "col-2 col-form-label font-weight-bold" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title" %>
                    </div>
                </div>
                    
                <div class="form-group row">
                    <%= f.label :description, class: "col-2 col-form-label font-weight-bold" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Enter text here" %>
                    </div>
                </div>
                
                <div class="form-group row justify-content-center">
                    <%= f.submit class: "btn btn-primary btn-lg" %>
                </div>
                <div class="form-group row justify-content-center">
                    <%= link_to "Cancel", reviews_path, class: "btn btn-danger btn-lg" %>
                </div>
            <% end %>
        </div>
    </div>
</div>