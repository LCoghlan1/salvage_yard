<p id="notice"><%= notice %></p>

  <h1 class="text-center mt-4"><%= @review.title %></h1>
    
    <div class="container">
        <div class="row justify-content-md-center">
           <div class="col-12 mt-4">
                <div class="card text-center shadow mb-5 bg-white rounded">
                  <div class="card-header font-italic">
                    <!--display user name above article-->
                  by <%= link_to @review.user.username, user_path(@review.user) %>
                  </div>
                  <div class="card-body">
                      
                    <!-- method keeps format it was typed in -->
                    <div class="card-text"><%= simple_format(@review.description) %></div>
                    
                      <% if logged_in? && (@review.user == current_user || current_user.admin?) %>
                        <%= link_to 'Edit', edit_review_path(@review), class: "btn btn-outline-secondary mt-4" %> 
                        <%= link_to "Delete", review_path(@review), class: "btn btn-outline-danger mt-4", method: :delete, data: {confirm: "Are you sure?"} %>
                      <% end %>
                    <%= link_to "Return to all reviews", reviews_path, class: "btn btn-outline-secondary mt-4" %>
                  </div>
                  <div class="card-footer text-muted">
                    <small>Created <%= time_ago_in_words(@review.created_at) %> ago,
                    edited <%= time_ago_in_words(@review.updated_at) %> ago</small>
                  </div>
                 </div>
            </div>
        </div>
    </div>
