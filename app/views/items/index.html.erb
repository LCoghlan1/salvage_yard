<p id="notice"><%= notice %></p>

<div class="container">

  <h1>Items</h1>
  
  <div class="row">
    <% @items.each do |item| %>
    
        <div class="card" style="max-width: 18rem;">
          <%= link_to image_tag item.image_url, class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= item.title %></h5>
            <p class="card-text"><%= item.description %></p>
            <p class="card-text">Category: <%= item.category %></p>
            <p class="card-text">â‚¬<%= item.price %></p>
            <%= link_to 'Edit', edit_item_path(item), class: "btn btn-primary" %>
            <%= link_to 'Show', item, class: "btn btn-primary"%>
          </div>
        </div>
    <% end %>

  </div>
    <%= link_to 'Add New Item', new_item_path, class: "btn btn-primary"%>
</div>



