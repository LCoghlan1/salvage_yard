<p id="notice"><%= notice %></p>

<div id="itemsContainer">
    
    <h1><%= @item.title %></h1>
       
    <%= image_tag @item.image_url, :class => 'itemholsIm'  %>
    <br>
    <h2>Description</h2>
    <p><%= @item.description %></p>
    <br>
    <h2>Price</h2>
    <p><%= number_to_currency(@item.price, :unit => "â‚¬") %></p>
    <br>
    <p>Category: <%= @item.category %></p>

</div>

<p style="text-align:center;">
    <a href="/cart/<%= @item.id %>" class="btn btn-primary">Add To Cart</a>
    <%= link_to 'Back',  items_path, :class => "btn btn-primary", :role => "button" %>
    
    <% if logged_in? && current_user.admin? %>
        <%= link_to 'Edit', edit_item_path(@item), class: "btn btn-primary" %>
        <%= link_to 'Delete', @item, class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} if current_user && current_user.admin? %>
    <% end %>
</p>
