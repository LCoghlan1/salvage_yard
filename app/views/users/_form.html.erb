<div class="container">

    <div class="row justify-content-center mt-4">
      
        <div class="col-10">
            
            <!--create obj to send to errors partial - allows partial to be used with multiple instances-->
            <%= render 'shared/errors', obj: @user %>
            
            <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-light rounded", local: true) do |f| %>
                <div class="col-0">
                    <%= f.label :username, class: "col-2 col-form-label font-weight-bold" %>
                </div>
                <div class="form-group row">
                    <div class="col-12">
                        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a Username" %>
                    </div>
                </div>
                    
                    
                <div class="col-0">
                    <%= f.label :email, class: "col-2 col-form-label font-weight-bold" %>
                </div>
                <div class="form-group row">
                    <div class="col-12">
                        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
                    </div>
                </div>
                
                <div class="col-0">
                    <%= f.label :password, class: "col-2 col-form-label font-weight-bold" %>
                </div>
                <div class="form-group row">
                    <div class="col-12">
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose password" %>
                    </div>
                </div>
                
                <div class="form-group row justify-content-center">
                    <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-outline-primary btn-lg") %>
                </div>
                <div class="form-group row justify-content-center">
                    <%= link_to "Cancel", root_path, class: "btn btn-outline-danger btn-lg" %>
                </div>
            <% end %>
        </div>
    </div>
</div>