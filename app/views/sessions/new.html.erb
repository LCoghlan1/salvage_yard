<h1 class="text-center mt-4">Log in</h1>

<div class="container">

    <div class="row justify-content-center">
      
        <div class="col-10">
            
            <!--create obj to send to errors partial - allows partial to be used with multiple instances-->
            
            <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-light rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :email, class: "col-2 col-form-label font-weight-bold" %>
                    <div class="col-10">
                        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= f.label :password, class: "col-2 col-form-label font-weight-bold" %>
                    <div class="col-10">
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
                    </div>
                </div>
                
                <div class="form-group row justify-content-center">
                    <%= f.submit "Log in", class: "btn btn-outline-primary btn-lg" %>
                </div>
                <div class="form-group row justify-content-center">
                    <%= link_to "Cancel", items_path, class: "btn btn-outline-danger btn-lg" %>
                </div>
                <hr>
                <p style="text-align:center; font-weight: bold; ">OR</p>
                <hr>
                <div class="form-group row justify-content-center">
                <%= link_to 'Sign up', signup_path, class: "btn btn-outline-primary btn-lg" %>
                </div>
            <% end %>
        </div>
    </div>
</div>